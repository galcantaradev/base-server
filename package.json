{
  "name": "base-server",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.ts",
  "scripts": {
    "dev": "nodemon ./dist/index.js",
    "start": "node ./dist/index.js",
    "watch": "tsc -w",
    "lint": "eslint './src/**/*.ts'",
    "migration:create": "mikro-orm migration:create"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.0.7",
    "@mikro-orm/core": "^4.0.7",
    "@mikro-orm/migrations": "^4.0.7",
    "@mikro-orm/postgresql": "^4.0.7",
    "apollo-server-express": "^2.18.1",
    "argon2": "^0.27.0",
    "class-validator": "^0.12.2",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.3.0",
    "pg": "^8.3.3",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.0.0",
    "type-graphql": "^1.0.0",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.14",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.7",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "prettier --write",
      "git add"
    ]
  }
}
